# Environment Configuration for GuardianLink Backend

# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration (Supabase PostgreSQL)
# Use the connection pooler URL for better performance
DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-1-us-east-1.pooler.supabase.com:5432/postgres

# Alternative individual database parameters (if not using DATABASE_URL)
DB_HOST=aws-1-us-east-1.pooler.supabase.com
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=YOUR_SUPABASE_PASSWORD_HERE

# Supabase API Configuration (for frontend)
SUPABASE_URL=https://[YOUR_PROJECT_REF].supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# JWT Configuration
JWT_SECRET=your_very_long_secret_key_minimum_256_bits_change_this_in_production
JWT_EXPIRATION=24h

# Google SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Twilio Configuration
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Application Base URL
APP_BASE_URL=http://localhost:8080

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:3001,http://localhost:5174

# MapTiler API Key
MAPTILER_API_KEY=YOUR_MAPTILER_API_KEY_HERE